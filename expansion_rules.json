  "size_class_rules": {
    "large": {
      "description": "Countries with population >20M or major tourism",
      "has_level3": true,
      "max_regions": 30,
      "max_cities": 50
    },
    "medium": {
      "description": "Countries with population 1M-20M",
      "has_level3": false,
      "max_regions": 0,
      "max_cities": 0
    },
    "small": {
      "description": "Countries/territories with population <1M",
      "has_level3": false,
      "max_regions": 0,
      "max_cities": 0
    }
  }
}
