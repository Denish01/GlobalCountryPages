{
  "version": "2.0",
  "description": "Rules governing entity expansion phases - 30 angles",

  "phases": {
    "1": {
      "name": "Overview Pass",
      "description": "Generate overview pages for all 249 entities",
      "angles": ["overview"],
      "entity_level": 2,
      "priority": 100,
      "estimated_days": 2,
      "pages_per_day": 200
