      "entity_level": 2,
      "priority": 90,
      "estimated_days": 12,
      "pages_per_day": 200,
      "order": ["africa", "asia", "europe", "north-america", "south-america", "oceania"]
    },
    "3": {
      "name": "Comparison Pass",
      "description": "Generate vs comparison pages",
      "angles": ["vs"],
      "entity_level": 2,
      "priority": 70,
      "estimated_days": 4,
      "pages_per_day": 200
    },
    "6": {
      "name": "Extended Angles Pass",
      "description": "Generate 19 new content angles per entity across all countries",
      "angles": ["food-and-cuisine", "language-guide", "transportation", "best-time-to-visit", "top-things-to-do", "where-to-stay", "internet-and-connectivity", "moving-there", "education", "real-estate", "taxes", "healthcare", "retirement", "digital-nomad-guide", "history-timeline", "politics-and-government", "demographics", "infrastructure", "business-and-investment"],
      "entity_level": 2,
      "priority": 65,
      "estimated_days": 24,
      "pages_per_day": 200
    },
    "7": {
      "name": "Level 3 Regions",
      "description": "Generate sub-region pages for large countries",
      "angles": ["overview", "geography", "culture", "cost-of-living", "cities-and-regions", "travel-safety", "positive-things", "food-and-cuisine", "transportation", "best-time-to-visit", "top-things-to-do", "healthcare"],
      "entity_level": 3,
      "entity_type": "region",
      "priority": 60,
      "estimated_days": 14,
      "pages_per_day": 200
    },
    "8": {
      "name": "Level 3 Cities",
      "description": "Generate city pages for large countries",
      "angles": ["overview", "geography", "culture", "cost-of-living", "travel-safety", "food-and-cuisine", "transportation", "top-things-to-do", "where-to-stay"],
      "entity_level": 3,
      "entity_type": "city",
      "priority": 50,
      "estimated_days": 38,
      "pages_per_day": 200
    }
